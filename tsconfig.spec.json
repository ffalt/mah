{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
		"esModuleInterop": true,
    "types": ["jest", "node"]
  },
  "files": [
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ],
	"exclude": [
		"local",
		"resources",
		"src/**/*.worker.ts",
		"test-config.helper.ts",
		"src/environments/environment.prod.ts"
	]
}
