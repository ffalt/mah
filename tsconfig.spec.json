{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"outDir": "./out-tsc/spec",
		"esModuleInterop": true,
		"types": [
			"jest",
			"node"
		]
	},
	"include": [
		"src/**/*.spec.ts",
		"src/**/*.d.ts"
	],
	"exclude": [
		"local",
		"resources",
		"src/**/*.worker.ts",
		"test-config.helper.ts",
		"src/environments/environment.capacitor.ts",
		"src/environments/environment.production.ts"
	]
}
